<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DF365BBB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/text_username"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:text="用户名"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/username"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="@+id/text_username"
            app:layout_constraintStart_toEndOf="@+id/text_username"
            app:layout_constraintTop_toTopOf="@+id/text_username" />

        <TextView
            android:id="@+id/text_password"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:gravity="center|left"
            android:text="密码"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_username" />

        <EditText
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:inputType="textPassword"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="@+id/text_password"
            app:layout_constraintStart_toEndOf="@+id/text_username"
            app:layout_constraintTop_toTopOf="@+id/text_password" />


        <TextView
            android:id="@+id/make_sure_password_text"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:gravity="center|left"
            android:text="确认密码"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_password" />


        <EditText
            android:id="@+id/make_sure_password"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:inputType="textPassword"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="@+id/make_sure_password_text"
            app:layout_constraintStart_toEndOf="@+id/text_username"
            app:layout_constraintTop_toTopOf="@+id/make_sure_password_text" />

        <TextView
            android:id="@+id/register"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="#FC3557BB"
            android:gravity="center"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/password"
            app:layout_constraintStart_toStartOf="@+id/text_password"
            app:layout_constraintTop_toBottomOf="@+id/make_sure_password_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>